{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npx nx build admin-dashboard --prod",
        "outputDirectory": "dist/apps/admin-dashboard/.next"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npx nx build advertiser-portal --prod",
        "outputDirectory": "dist/apps/advertiser-portal/.next"
      }
    }
  ]
}